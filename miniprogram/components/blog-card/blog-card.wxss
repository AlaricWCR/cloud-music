.blog {
  width: 100%;
  padding: 230rpx;
  background-color: #fff;
}

.blog-header {
  display: flex;
  align-items: center;
}

.blog-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 230rpx;
}

.blog-box {
  flex: -1;
}

.blog-nickName {
  font-size: 32rpx;
  color: #4B4B4B;
}

.blog-time {
  font-size: 24rpx;
  color: secondaryColor;
}

.blog-content {
  margin: 230rpx 0;
  color: #4B4B4B;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.blog-img {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.blog-img .img {
  flex: 1;
  width: 230rpx;
  height: 230rpx;
  margin-right: 115rpx;
  margin-bottom: 115rpx;
}

.blog-img .img:nth-child(3n) {
  margin-right: 0;
}
